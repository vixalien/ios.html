.alert
	padding 0
	z-index 100
	position absolute
	display none
	flex-direction column
	left 0
	right 0
	bottom 0
	top 0
	width 60%
	min-width 200px
	max-width 400px
	background-color white
	height fit-content
	margin auto
	border-radius 10px
	text-align center
	border 1px solid system-gray-2
	background-color rgba(255,255,255,0.8)
	backdrop-filter saturate(180%) blur(10px)
	& > *
		padding 10px 30px
	& > .title
		margin 5px 0 0 0
	& > p
		margin 0 0 5px 0
		padding-top 0
	& .links
		padding 0
		& > a
			padding 10px 30px
			display block
			border-top 1px solid system-gray-2
			&:active
				&:last-child
					border-radius 0 0 10px 10px
	&.mini
		& .links
			border-top 1px solid system-gray-2
			display flex
			& > a
				flex 1
				border 0
				border-left 1px solid system-gray-2
				&:last-child:active
					border-radius 0 0 10px 0
				&:first-child:active
					border-radius 0 0 0 10px
				&:first-child
					border-left 0
	&.active
		display flex
.alert-shadow
	display none
	position absolute
	left 0
	right 0
	bottom 0
	top 0
	width auto
	height auto
	background-color rgba(0,0,0,0.2)
	&.active
		display block
.view
	transition .3s
body
	transition .3s
.modal
	transition .3s
	position absolute
	background-color white
	left 0
	right 0
	bottom 0
	top 30px
	border-radius 10px 10px 0 0
	border 0
	display none
	padding 10px
	&.active
		display flex
.modal-bg
	transition .3s
	border-radius 10px
	position relative
	left 0
	right 0
	top 10px
	transform scale(0.95)
	background-color system-gray-3