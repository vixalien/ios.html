.tab-bar
	display flex
	position absolute
	bottom 0
	left 0
	right 0
	width auto
	text-align center
	border-top 1px solid rgba(51,51,51,0.2)
	padding-top 10px !important
	padding-bottom 10px !important
	img
		width: 24px;
		display: block;
		padding: 0;
		margin: auto;
	& > .tab
		&.active
			color link-color
		font-size 12px
		flex 1
		text-align center
	&.inline
		border-top unset
		position initial