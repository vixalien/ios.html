input[type="checkbox"]
	margin 0
	background system-gray-5
	outline 0
	transition .3s
	appearance none
	width 36px
	height 24px
	border-radius 24px
	padding 1px
	position relative
	box-shadow inset 0 0 3px 0 system-gray-3
	&::before
		left 1
		transition .3s
		cursor pointer
		content 'A'
		color transparent
		position absolute
		width 22px
		height 22px
		background-color white
		border-radius 100%
		box-shadow 0px 1px 4px 0px system-gray-2
	&:checked
		background-color link-color
		&::before
			transform translateX(12px)