.segmentedcontrol
	display flex
	text-align center
	background-color: transparent;
	border 1px solid link-color
	border-radius 10px
	padding 0
	overflow hidden
	& > .control
		transition .3s
		color link-color
		padding 5px
		border-radius 0
		font-size 16px
		font-weight 500
		flex 1
		text-align center
		border-top unset
		position initial
		cursor pointer
		border-right 1px solid link-color
		&:last-child
			border-right 0
		&.active
			color: white;
			background: link-color;
			box-shadow: 0px 1px 2px system-gray-3;